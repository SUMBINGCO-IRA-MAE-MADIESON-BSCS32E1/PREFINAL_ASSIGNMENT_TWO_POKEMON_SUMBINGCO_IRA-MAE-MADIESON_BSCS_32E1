@model List<PokemonMVCApp.Models.Pokemon>

@{
    ViewData["Title"] = "Pokémon List";
}

<h2>Pokémon List</h2>

<ul>
    @foreach (var pokemon in Model)
    {
        <li>
            <a href="@Url.Action("Details", "Pokemon", new { name = pokemon.Name })">@pokemon.Name</a>
        </li>
    }
</ul>

<div class="pagination">
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Index", "Pokemon", new { page = ViewBag.CurrentPage - 1 })">Previous</a>
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Index", "Pokemon", new { page = ViewBag.CurrentPage + 1 })">Next</a>
    }
</div>