@model PokemonMVCApp.Models.Pokemon

@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>
<p><strong>ID:</strong> @Model.Id</p>

<h3>Moves</h3>
<ul>
    @foreach (var move in Model.Moves)
    {
        <li>@move</li>
    }
</ul>

<h3>Abilities</h3>
<ul>
    @foreach (var ability in Model.Abilities)
    {
        <li>@ability</li>
    }
</ul>